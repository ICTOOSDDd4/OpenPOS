<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OpenPOS_APP.MainPage"
             Shell.NavBarIsVisible="False">
             
    <ContentPage.Resources>
        <ResourceDictionary Source="Resources/Styles/Colors.xaml"></ResourceDictionary>
    </ContentPage.Resources>

    <VerticalStackLayout
        Spacing="25"
        Padding="30,0"
        VerticalOptions="Center">
        <Image 
            x:Name="openposicon"
            Source="openpos_icon.png"
            SemanticProperties.Description="Hello, this is OpenPOS"
            HeightRequest="200"
            HorizontalOptions="Center"/>

        <Label
            Text="Weclome to OpenPOS!"
            SemanticProperties.HeadingLevel="Level1"
            FontFamily="LeagueSpartan-SemiBold"
            SemanticProperties.Description="The way to access your OpenPOS Experience"
            TextColor="Black"
            FontSize="24"
            HorizontalOptions="Center" />

        <Button
            x:Name="MainLoginButton"
            Text="START YOUR EXPERIENCE"
            SemanticProperties.Hint="Press to login"
            Clicked="OnLoginButtonClicked"
            HorizontalOptions="Center"
            TextColor="Black"
            BackgroundColor="{StaticResource OpenPos-Yellow}" 
            CornerRadius="10" />
    </VerticalStackLayout>
</ContentPage>
