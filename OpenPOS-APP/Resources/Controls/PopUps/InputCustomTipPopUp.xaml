<?xml version="1.0" encoding="utf-8" ?>
<mct:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
           xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
           xmlns:mct="clr-namespace:CommunityToolkit.Maui.Views;assembly=CommunityToolkit.Maui"
           x:Class="OpenPOS_APP.Resources.Controls.PopUps.InputCustomTipPopUp"
           CanBeDismissedByTappingOutsideOfPopup="False"
           Size="300,300">
    <VerticalStackLayout>
        <VerticalStackLayout WidthRequest="300" HeightRequest="300" VerticalOptions="Center" HorizontalOptions="Center" BackgroundColor="White" Padding="10" Spacing="10" Margin="10">
            <Label 
            Text="Add a custom tip"
            FontSize="20"
            FontFamily="LeagueSpartan-Bold"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
            <Entry Placeholder="Enter the amount you want to tip"/>
            <Button WidthRequest="200" Text="Add" Clicked="Closing_Button_Clicked" VerticalOptions="End" />
        </VerticalStackLayout>
    </VerticalStackLayout>

</mct:Popup>