<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OpenPOS_APP.AdminDashboardPage"
             xmlns:customControls="clr-namespace:OpenPOS_APP.Resources.Controls"
             xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.Maui;assembly=LiveChartsCore.SkiaSharpView.Maui"
             Title="AdminDashboardPage"
             Shell.NavBarIsVisible="False">
    <VerticalStackLayout>
        <customControls:AdminHeader x:Name="AdminHeader"/>
        <VerticalStackLayout>
            <HorizontalStackLayout>
                <lvc:CartesianChart 
                    x:Name="RevenueChart"
                    Series="{Binding RevenueSeries}"
                    IsVisible="true"
                />
            </HorizontalStackLayout>
            <HorizontalStackLayout>
                <Label Text="Testing stuff"/>
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </VerticalStackLayout>
</ContentPage>