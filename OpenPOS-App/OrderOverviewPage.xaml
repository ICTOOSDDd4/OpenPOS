<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OpenPOS_APP.OrderOverviewPage"
             Shell.NavBarIsVisible="False"
             Title="OrderOverviewPage">
    <VerticalStackLayout>
        <ScrollView
            x:Name="ScrView"
            Orientation="Vertical"
            VerticalScrollBarVisibility="Always"
            VerticalOptions="FillAndExpand"
            HeightRequest="900"
            >

            <VerticalStackLayout
            HorizontalOptions="Center"
            x:Name="MainVerticalLayout">

            </VerticalStackLayout>
        </ScrollView>
        <Button
            Margin="10,20,10,20"
            x:Name="OrderButton"
            Text="Refresh"
            WidthRequest="350"
            HeightRequest="60"
            Clicked="ClickedRefresh"
            FontSize="35"
            Padding="0,0,10,0"
            />
    </VerticalStackLayout>
</ContentPage>